<%= form_for(@student, html: { class: "col s12" }) do |form| %>
  <div class="row">
    <div class="input-field col s12">
      <%= form.text_field :name, placeholder: "Enter your full name", autofocus: true%>
      <%= form.label :name %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= form.text_field :email, placeholder: "Enter your email address" %>
      <%= form.label :email %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= form.submit "Sign Up", class: "btn orange waves-effect waves-light right" %>
    </div>
  </div>
<% end %>
